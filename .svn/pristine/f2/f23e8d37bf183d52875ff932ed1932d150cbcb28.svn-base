	    $(document).ready(function(){

	    	//ajax
	    	var user_id=parseInt(localStorage.getItem("user_id"));
	    	var timestamp = Date.parse(new Date());
 			var values=["user_id","timestamp"];
			var data={"user_id":user_id,"timestamp":timestamp};
			var sign = doSign(values,data);
			var keys="idf5nsi5t0qbemwo12hztbftm53tbv6pht";
			$.ajax({
				type:"post",
				url: link_url+"goodsCollectListByUser",
				dataType: "json",
				data: {"user_id":user_id,"key":keys,"timestamp":timestamp,"sign":sign},
				success: function(data) {
				    if(data.status == 1){
				        console.log("ok");
				        console.log(data);
				        $.each(data.data, function(i,v) {
				        	var s=v.smeta;
				        	$('<li><div class="behind"><a href="#" class="ui-btn delete-btn" style=" width: 80px; height: 100%; background: #bbb; line-height: 25px;"><div style="margin-top: 37px;">取消</div><div>收藏</div></a></div><a class="goproduct" gpid="'+v.goods_id+'"><div class="favorites-con-item"><div class="fl orderd-product-img"><img src="'+s.thumb+'"></div><div class="fl orderd-product-con"><div class="orderd-product-con-name">'+v.name+'</div><div class="orderd-product-con-gg">'+link_url1+v.smeta.thumb+'</div></div><div class="clear"></div></div></a></li>').appendTo($(".favo"))

				        });
				        var h=$(".favorites-con-item").height();
				    	console.log(h);
				    	$(".behind a").css("min-height",h);
				    	$(".goproduct").click(function(){
				    		var gpid=$(this).attr("gpid");
				    		console.log(gpid);
				    		window.location.href="product.html?id="+gpid;
				    	})
				    	$(function() {
					        function prevent_default(e) {
					            e.preventDefault();
					        }
					 
					        function disable_scroll() {
					            $(document).on('touchmove', prevent_default);
					        }
					
					        function enable_scroll() {
					            $(document).unbind('touchmove', prevent_default)
					        }
					
					        var x;
					        $('.swipe-delete li > a')
					            .on('touchstart', function(e) {
					                $('.swipe-delete li > a').css('left', '0px') // close em all
					                $(e.currentTarget).addClass('open')
					                x = e.originalEvent.targetTouches[0].pageX // anchor point
					            })
					            .on('touchmove', function(e) {
					                var change = e.originalEvent.targetTouches[0].pageX - x
					                change = Math.min(Math.max(-80, change), 0) // restrict to -100px left, 0px right
					                e.currentTarget.style.left = change + 'px'
					                if (change < -10) disable_scroll() // disable scroll once we hit 10px horizontal slide
					            })
					            .on('touchend', function(e) {
					                var left = parseInt(e.currentTarget.style.left)
					                var new_left;
					                if (left < -35) {
					                    new_left = '-80px'
					                } else if (left > 35) {
					                    new_left = '80px'
					                } else {
					                    new_left = '0px'
					                }
					                $(e.currentTarget).animate({left: new_left}, 200)
					                enable_scroll()
					            });
					            $('li .delete-btn').on('touchend', function(e) {
					                e.preventDefault()
					                $(this).parents('li').slideUp('fast', function() {
					                    $(this).remove()
					                })
					              })  
					            });
				    }else{
				    	console.log(data);
				     	alert(data.data);
				    }
				},
				error:function(){
				    console.log(link_url);
				}
			})
	    	
	    })
 
    </script>
