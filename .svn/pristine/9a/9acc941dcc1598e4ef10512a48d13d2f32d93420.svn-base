	<script>
	$(function  () {
			
	    //获取短信验证码
	    var validCode=true;
	    $(".reset-hq").click (function  () {
	    	var email=$(".email").val();
			var reem=/^(\w-*\.*)+@(\w-?)+(\.\w{2,})+$/;
			var patt = new RegExp('@');
			if(email==""){
				$.toast("请输入邮箱", "text");
				return false;
			}else if(!reem.test(email)){
				$.toast("请输入正确的邮箱", "text");
				return false;
			}else{
				 var timestamp = Date.parse(new Date());
 				 var values=["type","phone","timestamp"];
				 var data={"type":"2","phone":email,"timestamp":timestamp};
				 var sign = doSign(values,data);
				 var keys="idf5nsi5t0qbemwo12hztbftm53tbv6pht";
						$.ajax({
							type:"post",
							url: link_url+"getVerifyCode",
							dataType: "json",
				            data: {"type":"2","phone":email,"key":keys,"timestamp":timestamp,"sign":sign},
				            success: function(data) {
				            	 if(data.status == 1){
				            	 	console.log("ok");
				            	 	console.log(data);
				            	 }else{
				            	 	$.toast(data.data, "text");
				            	 }
				            },
				            error:function(){
				            	console.log(link_url);
//				            	alert(1);
				            }
						})
			}
	        var time=60;
	        var code=$(this);
	        if (validCode) {
	            validCode=false;
	            code.addClass("msgs1");
	        var t=setInterval(function  () {
	            time--;
	            code.html(time+"秒后重发");
	            if (time==0) {
	                clearInterval(t);
	            code.html("重新获取");
	                validCode=true;
	            code.removeClass("msgs1");
	
	            }
	        },1000)
	        }
	    })
	})
		$(".nextbtn").click(function(){
			var email=$(".email").val();
			var yzm=$(".yzm").val();
			var reem=/^(\w-*\.*)+@(\w-?)+(\.\w{2,})+$/;
			var patt = new RegExp('@');
			if(email==""){
				$.toast("请输入邮箱", "text");
			}else if(!reem.test(email)){
				$.toast("请输入正确的邮箱", "text")
			}else if(yzm==""){
				$.toast("请输入验证码", "text")
			}else{
				window.location.href="resetPwd.html?phone="+email+"&yzm="+yzm;
			}
		})
	</script>
