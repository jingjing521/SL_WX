	<script class="source" type="text/javascript">
	$('.product-time-con').downCount({
			date: '3/03/2017 09:00:00',
			offset: +10
		}, function () {
			alert('倒计时结束!');
		});
	$(document).ready(function(){
		setInterval(function(){
			var a=$(".days-con span").text();
			var b=$(".hours-con span").text();
			var c=$(".minutes-con span").text();
			var d=$(".seconds-con span").text();
		if(a!=""){
			var str=a.replace(/(\d{1})/g,'$1 ').replace(/\s*$/,'');
			var strb=b.replace(/(\d{1})/g,'$1 ').replace(/\s*$/,'');
			var strc=c.replace(/(\d{1})/g,'$1 ').replace(/\s*$/,'');
			var strd=d.replace(/(\d{1})/g,'$1 ').replace(/\s*$/,'');
//			console.log(str);
			$(".days-con span").text(str);
			$(".hours-con span").text(strb);
			$(".minutes-con span").text(strc);
			$(".seconds-con span").text(strd);
		}
		
		},1)
	
	//购物车
	$(".cart-ul").on("click",".cart-line",function(){
		$(".cart-line").removeClass("cart-active");
		$(this).addClass("cart-active");
		console.log($(this).text());
	})
	$(".cart-uls").on("click",".cart-lines",function(){
		$(".cart-lines").removeClass("cart-actives");
		$(this).addClass("cart-actives");
		console.log($(this).text());
	})

	var num=$(".inputs").val();
	var price=$(".cart-price span").html();
	$(".add").click(function(){
		num++;
		$(".inputs").val(num);
//		$(".cart-price span").html(price*num);
	})
	$(".reduce").click(function(){
		if(num>1){
			num--;
		}else{alert("商品不能为0");}
		$(".inputs").val(num);
//		$(".cart-price span").html(price*num);
	})

	$(".cart-btn").click(function(){
		$(".cart").hide();
		$('#overlay').css('display','none');
//		window.location.href="confirm-order.html";
	});
	$(".cart-close").click(function(){
		$(".cart").hide();
		$('#overlay').css('display','none');
	});
	$(".join").click(function(){
		$('#overlay').css('display','block');
	   		var docHeight = $(document).height(); //获取窗口高度  

        $('#overlay')  
		    .height(docHeight)  
		    .css({  
		      'opacity': .5, //透明度  
		      'position': 'absolute',  
		      'top': 0,  
		      'left': 0,  
		      'background-color': 'black',  
		      'width': '100%',  
		      'z-index': 99 //保证这个悬浮层位于其它内容之上  
		 });  
		$(".cart").show();
	})
	$(".joins").click(function(){
		$('#overlay').css('display','block');
	   		var docHeight = $(document).height(); //获取窗口高度  

        $('#overlay')  
		    .height(docHeight)  
		    .css({  
		      'opacity': .5, //透明度  
		      'position': 'absolute',  
		      'top': 0,  
		      'left': 0,  
		      'background-color': 'black',  
		      'width': '100%',  
		      'z-index': 99 //保证这个悬浮层位于其它内容之上  
		 });  
		$(".cart").show();
		$(".cart-btn").click(function(){
			$(".cart").hide();
			$('#overlay').css('display','none');
			window.location.href="confirm-order.html";
		});
	})
	//收藏
	var i=1;
	$(".show-img").click(function(){
		if(i%2!=0){
			a();
			i++;
		}else if(i%2==0){
			b();
			i++;
		}else{
			alert("error");
		};
//		alert(i)
	})

	function a(){
		$(".show-img img").attr("src","images/sc (2).png");
	}
	function b(){
		$(".show-img img").attr("src","images/sc.png");
	}
	})
	</script>
	
