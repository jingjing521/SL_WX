	</body>
	<script src="js/jquery-2.2.1.js"></script>
	<script type="text/javascript" src="js/center.js"></script>
	<script type="text/javascript" src="js/md5.js"></script>
	<script type="text/javascript" src="js/jquery-weui.js"></script>
	<script src="js/fastclick.js"></script>
	<script>
		var loading = false;
		var page = 0;
		indexData();
		

		function indexData() {
			page++;
			//ajax
			var user_id = localStorage.getItem("user_id");
			console.log(user_id);
			var timestamp1 = Date.parse(new Date());
			var values1 = ["user_id", "page", "timestamp"];
			var data1 = {
				"user_id": user_id,
				"page": page,
				"timestamp": timestamp1
			};
			var sign1 = doSign(values1, data1);
			var keys = "idf5nsi5t0qbemwo12hztbftm53tbv6pht";
			$.ajax({
				type: "post",
				url: link_url + "integralLogListByUser",
				dataType: "json",
				data: {
					"user_id": user_id,
					"page": page,
					"key": keys,
					"timestamp": timestamp1,
					"sign": sign1
				},
				success: function(data) {
					if(data.status == 1) {
						console.log(data);
						console.log(data.data.log_lsit.length);
						
						console.log(page);
						if(page==1){
							$(".integration-po-top-num").text(data.data.user_score);
						}
						if(data.data.log_lsit == 0) {
//							$.toast("没有更多相关明细！", "text");
							//$(".integration-po-top-num").text(0);
							loading = true;
							$(document.body).infinite().on("infinite", function() {
								if(loading) return;
								loading = false;
								setTimeout(function() {
//									page++;
									indexData();
									loading = true;
								}, 500);
							});
						} else {
							$.each(data.data.log_lsit, function(i, v) {
								$('<div class="integration-con-item"><div class="integration-con-item-name">' + v.name + '</div><div class="integration-con-item-nums">' + v.integral + '</div><div class="integration-con-item-date">' + v.add_time + '</div></div>').appendTo($(".integration-con"));
							})
							$(document.body).infinite().on("infinite", function() {
								if(loading) return;
								loading = true;
								setTimeout(function() {
//									page++;
									indexData();
									loading = false;
								}, 500);
							});

						}
					} else {
					
						$.toast("没有更多相关明细!", "text");
						console.log(data);
					}
				},
				error: function() {

				}
			})
		}
	</script>

</html>