	<script>
	  $(function() {
	    FastClick.attach(document.body);
	  });
	  indexData();
	  var page=0;
	  function indexData(){
		page++;	 	
	  		//ajax
	  		 var mtype=1;
			 var timestamp1 = Date.parse(new Date());
   			 var values1=["page","mtype","timestamp"];
			 var data1={"page":page,"mtype":mtype,"timestamp":timestamp1};
			 var sign1 = doSign(values1,data1);
			 var keys="idf5nsi5t0qbemwo12hztbftm53tbv6pht";
			 $.ajax({
				type:"post",
				url: link_url+"appIndexData",
				dataType: "json",
			    data: {"page":page,"mtype":mtype,"key":keys,"timestamp":timestamp1,"sign":sign1},
				success: function(data) {
				    if(data.status == 1){
				        console.log(data);
				        $.each(data.data.slide_posts,function(i,v){
				        	if(i==0){
								$('<div class="swiper-slide ml0"><a href="'+v.slide_url+'"><img src="'+v.slide_pic+'"></a></div>').appendTo($(".swiper-wrapper"));	
				        	}else{
								$('<div class="swiper-slide"><a href="'+v.slide_url+'"><img src="'+v.slide_pic+'"></a></div>').appendTo($(".swiper-wrapper"));	
				        	}
				        })
				        $.each(data.data.ad_posts,function(i,v){
				        	if(i==0){
								$('<div class="index-con mt20"><div class="index-con-title"><img src="images/8.png"></div><a href="store.html"><div class="index-con-banner"><img src="'+link_url1+v.img+'"></div></a><div class="index-con-text"><div class="fl colors font16">'+v.discount+'折起</div><div class="fl ml10 index-con-name">'+v.desc+'</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩'+v.days+'天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));	
				        	}else{
								$('<div class="index-con"><div class="index-con-title"><img src="images/8.png"></div><a href="store.html"><div class="index-con-banner"><img src="'+link_url1+v.img+'"></div></a><div class="index-con-text"><div class="fl colors font16">'+v.discount+'折起</div><div class="fl ml10 index-con-name">'+v.desc+'</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩'+v.days+'天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));	
									
				        	}
				        })
				         
				    }else{
				    	console.log(data);
				       $.toast(data.data, "text");
				    }
				},
				error:function(){
					   
				}
			 })
}
	 var loading = false;
      $(document.body).infinite().on("infinite", function() {
        if(loading) return;
        loading = true;
        setTimeout(function() {
          page++;
          indexData();
          loading = false;
        }, 2000);
      });
