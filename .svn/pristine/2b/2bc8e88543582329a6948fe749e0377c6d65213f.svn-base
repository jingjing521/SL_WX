				            	 if(data.status == 1){
				            	 	console.log("ok");
				            	 	console.log(data);
				            	 	djs();
				            	 }else{
				            	 	$.toast(data.data, "text");
				            	 }
				            },
				            error:function(){
				            	console.log(link_url);
				            	
				            }
						})
					}
				}
			}
			function djs(){
				 var time=60;
		        var code=$(this);
		        if (validCode) {
		            validCode=false;
		            code.addClass("msgs1");
		        var t=setInterval(function  () {
		            time--;
		            code.html(time+"秒后重发");
		            if (time==0) {
		                clearInterval(t);
		            code.html("重新获取");
		                validCode=true;
		            code.removeClass("msgs1");
		
		            }
		        },1000)
		        }
			}
	       
	    })
	})
