<!doctype html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta content="width=device-width, minimum-scale=1,initial-scale=1, maximum-scale=1, user-scalable=1;" id="viewport" name="viewport" />
		<!--离线应用的另一个技巧-->
		<meta content="yes" name="apple-mobile-web-app-capable" />
		<!--指定的iphone中safari顶端的状态条的样式-->
		<meta content="black" name="apple-mobile-web-app-status-bar-style" />
		<!--告诉设备忽略将页面中的数字识别为电话号码-->
		<meta content="telephone=no" name="format-detection" />
		<title>神鹿商城</title>
		<link rel="stylesheet" type="text/css" href="css/index.css" />
		<!-- Link Swiper's CSS -->
		<link rel="stylesheet" href="css/swiper.min.css">
		<link rel="stylesheet" href="css/weui.min.css">
		<link rel="stylesheet" href="css/jquery-weui.css">

	</head>

	<body>
		<!-- 总体框架 -->
		<div class="index-bg">
			<div id="index">

				<div class="index-top">
					<a href="search.html">
						<div class="fl index-top-img"><img src="images/search.png"></div>
					</a>
					<div class="fl index-top-logo"><img src="images/logos.png"></div>
					<!--<a href="information.html">
						<div class="fr index-top-img"><img src="images/msg.png"></div>
					</a>-->
					<div class="clear"></div>
				</div>

				<div class="index-nav">
					<div class="swiper-container">
						<div class="swiper-wrapper navs">
							<div class="swiper-slide">
								<a href="index.html">今日上新</a>
							</div>
							<div class="swiper-slide swiper-slide-w">
								<a href="presell.html">预售商品</a>
							</div>

						</div>
					</div>
				</div>

				<div class="index-banner">
					<!-- 轮播图 -->
					<div class="slide" id="slide2">
						<ul class="banner-sw">

						</ul>
						<div class="dot">

						</div>
					</div>
				</div>

				<!--<div class="zw50"></div>-->
				<div class="weui_tabbar">
					<a onclick="window.location.href='index.html'" class="weui_tabbar_item weui_bar_item_on">
						<div class="weui_tabbar_icon">
							<img src="images/1 (2).png" alt="">
						</div>
						<p class="weui_tabbar_label ">首页</p>
					</a>
					<a onclick="window.location.href='favorites.html'" class="weui_tabbar_item">
						<div class="weui_tabbar_icon">
							<img src="images/2 (1).png" alt="">
						</div>
						<p class="weui_tabbar_label">收藏夹</p>
					</a>
					<a onclick="window.location.href='cart.html'" class="weui_tabbar_item">
						<div class="weui_tabbar_icon">
							<img src="images/3 (1).png" alt="">
						</div>
						<p class="weui_tabbar_label">购物车</p>
					</a>
					<a onclick="window.location.href='center.html'" class="weui_tabbar_item">
						<div class="weui_tabbar_icon">
							<img src="images/4 (1).png" alt="">
						</div>
						<p class="weui_tabbar_label">我的神鹿</p>
					</a>
				</div>

			</div>
		</div>
		<div class="zw50"></div>
	</body>
	<script src="js/jquery-2.2.1.js"></script>
	<script src="js/center.js"></script>
	<script src="js/md5.js"></script>
	<!-- Swiper JS -->
	<script type="text/javascript" src="js/swiper.min.js" ></script>
	<script src="js/swipe.js"></script>
	<script src="js/fastclick.js"></script>
	<script src="js/jquery-weui.js"></script>
	<script>
		var names = "";
		$(document).ready(function() {
			var timestamp = Date.parse(new Date());
			var values = ["timestamp"];
			var data = {
				"timestamp": timestamp
			};
			var sign = doSign(values, data);
			var keys = "idf5nsi5t0qbemwo12hztbftm53tbv6pht";
			$.ajax({
				type: "post",
				url: link_url + "goodsCategoryOneList",
				dataType: "json",
				data: {
					"key": keys,
					"timestamp": timestamp,
					"sign": sign
				},
				success: function(data) {
					if(data.status == 1) {
						console.log("ok");
						console.log(data);
						$.each(data.data, function(i, v) {
							
							$(' <div class="swiper-slide swiper-slide-ws " lid="' + v.id + '"><a href="suit-dress.html?lid=' + v.id + '">' + v.name + '</a></div>').appendTo($(".navs"));
							if(v.id == parseUrl().lid) {
								$(".swiper-slide-ws").eq(i).addClass("swiper-active");
								names = v.name;
							}
						})
						$('<div class="swiper-slide swiper-slide-ws"><a href="notice.html">公告</a></div>').appendTo($(".navs"));
					} else {
						$.toast(data.data, "text");
					}
					var swiper = new Swiper('.swiper-container', {
						pagination: '.swiper-pagination',
						slidesPerView: 'auto',
						paginationClickable: false,
						spaceBetween: 0
					});

				},
				error: function() {
					console.log(link_url);
				}
			})
			indexData();
		})
		var loading = false;
		$(function() {
			FastClick.attach(document.body);
		});

		var page = 0;

		function indexData() {
			page++;
			//ajax
			var cat_id = parseUrl().lid || "";
			var mtype = 2;
			console.log(cat_id);
			var timestamp1 = Date.parse(new Date());
			var values1 = ["page", "mtype", "cat_id", "timestamp"];
			var data1 = {
				"page": page,
				"mtype": mtype,
				"cat_id": cat_id,
				"timestamp": timestamp1
			};
			var sign1 = doSign(values1, data1);
			var keys = "idf5nsi5t0qbemwo12hztbftm53tbv6pht";
			$.ajax({
				type: "post",
				url: link_url + "appIndexData",
				dataType: "json",
				data: {
					"page": page,
					"mtype": mtype,
					"cat_id": cat_id,
					"key": keys,
					"timestamp": timestamp1,
					"sign": sign1
				},
				success: function(data) {
					if(data.status == 1) {
						console.log(data);
						if(page == 1) {
							$.each(data.data.slide_posts, function(i, v) {
								if(v.shop_id>0){
							        if(v.templet_pc==1){
							        	$('<li> <a href="store.html?id='+v.shop_id+'"><img src="'+v.slide_pic+'" alt=""></a></li>').appendTo($(".banner-sw"));
							        	$('<span></span>').appendTo($(".dot"));
							   		}else{
							    		$('<li> <a href="stores.html?id='+v.shop_id+'"><img src="'+v.slide_pic+'" alt=""></a></li>').appendTo($(".banner-sw"));
							    		$('<span></span>').appendTo($(".dot"));
							    	}
							     			
							    }else{
							     	$('<li> <a href="'+v.slide_url+'"><img src="'+v.slide_pic+'" alt=""></a></li>').appendTo($(".banner-sw"));
							        $('<span></span>').appendTo($(".dot"));
						 		}
								console.log(link_url1 + v.slide_pic);
							})
							$('#slide2').swipeSlide({
								autoSwipe: true, //自动切换默认是
								speed: 3000, //速度默认4000
								continuousScroll: true, //默认否
								transitionType: 'cubic-bezier(0.22, 0.69, 0.72, 0.88)', //过渡动画linear/ease/ease-in/ease-out/ease-in-out/cubic-bezier
								lazyLoad: true, //懒加载默认否
								firstCallback: function(i, sum, me) {
									me.find('.dot').children().first().addClass('cur');
								},
								callback: function(i, sum, me) {
									me.find('.dot').children().eq(i).addClass('cur').siblings().removeClass('cur');
								}
							});
							var wh=$("#slide2").find(".dot").width();
							var a=wh/2;
							$("#slide2").find(".dot").css("margin-right",-a)
						}
						console.log(data.data.ad_posts.length);
						if(data.data.ad_posts.length == 0) {
//							$.toast("没有更多的数据！", "text");
							loading = true;
							$(document.body).infinite().on("infinite", function() {
								if(loading) return;
								loading = false;
								setTimeout(function() {
									page++;
									indexData();
									loading = true;
								}, 500);
							});
						} else {
							$.each(data.data.ad_posts, function(i, v) {
								if(page >= 2) {
									if(v.templet_mobile==1){
										$('<div class="index-con"><a href="store.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
									}else{
										$('<div class="index-con"><a href="stores.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
									}
								} else {
									if(i == 0) {
										console.log(names);
										if(v.templet_mobile==1){
											$('<div class="index-con mt20"><div class="index-con-title"><img src="images/8 (1).png"><span>' + names + '特卖</span></div><a href="store.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
										}else{
											$('<div class="index-con mt20"><div class="index-con-title"><img src="images/8 (1).png"><span>' + names + '特卖</span></div><a href="stores.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
										}
									} else {
										if(v.templet_mobile==1){
											$('<div class="index-con"><a href="store.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
										}else{
											$('<div class="index-con"><a href="stores.html?id=' + v.shop_id + '"><div class="index-con-banner"><img src="' + v.img + '"></div></a><div class="index-con-text"><div class="fl colors font16">' + v.discount + '折起</div><div class="fl ml10 index-con-name">' + v.desc + '</div><div class="fr colore"><img src="images/9.png"><span class="linh52">剩' + v.days + '天</span></div><div class="clear"></div></div></div>').appendTo($("#index"));
										}
									}
								}
							})

							$(document.body).infinite().on("infinite", function() {
								if(loading) return;
								loading = true;
								setTimeout(function() {
									page++;
									indexData();
									loading = false;
								}, 500);
							});

						}

					} else {
						console.log(data);
						$.toast(data.data, "text");
					}
				},
				error: function() {

				}
			})
		}
	</script>

</html>